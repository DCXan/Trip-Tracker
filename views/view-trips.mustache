<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>My Trips</title>
</head>
<body>
    <form method="POST" action="/logout">
        <button>Log out</button>
      </form>
    <h1>My Trips</h1>
    <div>
      <a href="/chat">Join the Chat!</a>
    </div>
    <div>
      <a href="/trips/add-trip">Add a Trip</a>
    </div>
    <ul>
    {{#trips}}
        <li>{{title}}
            <div>
                <img src="{{photo}}">
            </div>
            
            <div>
                From {{departDate}} To {{returnDate}}
            </div>
            <form method = 'POST' action = '/trips/delete-trip'>
                <input type="hidden" value = {{tripID}} name="tripID"/>
                <button>Delete Trip</button>
            </form>

    {{/trips}}
    </ul>
</body>
</html>